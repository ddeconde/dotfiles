exec --no-startup-id redshift -l 34.05:-118.24 -t 6500:3600

# change colorscheme via hotkey
bindsym $mod+Shift+d exec "cat ~/.Xresources.base ~/.Xresources.dark > ~/.Xresources && xrdb -merge ~/.Xresources && cat ~/.config/i3/config.base ~/.config/i3/config.dark > ~/.config/i3/config && i3-msg restart"
bindsym $mod+Shift+b exec "cat ~/.Xresources.base ~/.Xresources.light > ~/.Xresources && xrdb -merge ~/.Xresources && cat ~/.config/i3/config.base ~/.config/i3/config.light > ~/.config/i3/config && i3-msg restart"
